<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sheron.csci4100u.labs.lab7.AddGrade">


    <!-- First Name label and text field -->
    <!--####################################################################-->
    <TextView
        android:id="@+id/tvStudentId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:labelFor="@+id/etStudentId"
        android:text="@string/student_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@id/etStudentId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvStudentId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Last Name label and text field -->
    <!--####################################################################-->
    <TextView
        android:id="@+id/tvCourseComponent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:labelFor="@+id/etCourseComponent"
        android:text="@string/courseComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStudentId" />

    <EditText
        android:id="@id/etCourseComponent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@id/tvCourseComponent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStudentId" />


    <!-- Phone Number label and text field -->
    <!--####################################################################-->
    <TextView
        android:id="@+id/tvMark"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:labelFor="@+id/etMark"
        android:text="@string/mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCourseComponent" />

    <EditText
        android:id="@id/etMark"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:inputType="phone"
        app:layout_constraintBaseline_toBaselineOf="@id/tvMark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCourseComponent" />


    <!-- Add contact button -->
    <!--####################################################################-->
    <Button
        android:id="@+id/btnAddGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
